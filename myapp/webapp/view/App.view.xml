<mvc:View
    controllerName="opensap.myapp.controller.App"
    displayBlock="true"
    xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c = "opensap.myapp.control"

>
<App id="app">
    <pages>
        <Page title="openSAP - Developing with SAPUI5">
            <content>
                <IconTabBar
                    class="sapUiResponsiveContentPadding"
                    id="idTopLevelIconTabBar"
                    selectedKey="db">
                    <items>
                        <IconTabFilter id="start" text="{i18n>gettingStartedFilter}">

                        <Carousel>
                            <pages>
                                <Image src="./view/image-02.png" height="200px"/>
                                <Image src="./view/image-02.png" height="200px"/>
                                <Image src="./view/image-02.png" height="200px"/>
                            </pages>
                        </Carousel>
                        <Button text="{i18n>showHelloButtonText}" press=".onShowHello" />
                        <Input
                            value="{
                               path : 'helloPanel>/recipient/name',
                               type: 'sap.ui.model.type.Float',
                               formatOptions: {
                                    minFractionDigits : 1
                               },
                               constraints: {
                                    minimum: 200,
                                    maximum : 3000
                               }
                            }"
                            required="true"
                            description="Hello {helloPanel>/recipient/name}"
                            width="60%"/>
                            
                        </IconTabFilter>
                        <IconTabFilter id="layouts" text="{i18n>layoutFilter}">
                            <MessageStrip
                                type="Information"
                                showIcon="true"
                                text="Here's a Form Layout inside an Icon Tab Bar â€¦"/>
                                
                            <f:SimpleForm id="simpleFormChange"
                                title="Address"
                                editable="true"
                                class="editableForm ">
                                <core:Icon src="sap-icon://developer-settings"
                                size="200px">
                                </core:Icon>
                                <f:content>
                                    <Label text="{i18n>layoutFormName}"/>
                                    <Input value="{address>/Name}"/>
                                    <Label text="{i18n>layoutFormStreet}"/>
                                    <Input value="{address>/Street}"/>
                                    <Label text="{i18n>layoutFormHouseNumber}"/>
                                    <Input value="{address>/HouseNumber}"/>
                                    <Label text="{i18n>layoutFormZIPCode}"/>
                                    <Input value="{address>/ZIPCode}"/>
                                    <Label text="{i18n>layoutFormCity}"/>
                                    <Input value="{address>/City}" />
                                    <Label text="{i18n>layoutFormCountry}"/>
                                    <Select>
                                        <items>
                                            <core:Item text="{i18n>layoutCountryGermany}"/>
                                            <core:Item text="{i18n>layoutCountryUSA}"/>
                                            <core:Item text="{i18n>layoutCountryEngland}"/>
                                        </items>
                                    </Select>
                                </f:content>
                            </f:SimpleForm>
                            <Toolbar>
                                <ToolbarSpacer/>
                                <Button
                                    icon="sap-icon://save"
                                    text="{i18n>layoutPublishButton}"
                                    type="Accept"/>
                                <Button
                                    icon="sap-icon://delete"
                                    text="{i18n>layoutDraftButton}"/>
                            </Toolbar>
                        </IconTabFilter>
                        <IconTabFilter
                            text="Data Binding"
                            key="db"
                        >
                            <IconTabBar
                                id="iconTabBar"
                                select="onQuickFilter"
                                expandable="false"
                                applyContentPadding="false"
                            >
                            <items>
                                <IconTabFilter
                                    key="all"
                                    showAll="true"
                                    count="{i18n>worklistFilterProductsAllCount}"
                                    text="{i18n>worklistFilterProductsAll}"/>
                                <IconTabSeparator/>
                                <IconTabFilter
                                    key="cheap"
                                    icon="sap-icon://loan"
                                    count="{}"
                                    iconColor="Positive"
                                    text="{i18n>worklistFilterCheap}"/>
                                <IconTabFilter
                                    key="moderate"
                                    icon="sap-icon://waiver"
                                    iconColor="Critical"
                                    text="{i18n>worklistFilterModerate}"/>
                                <IconTabFilter
                                    key="expensive"
                                    icon="sap-icon://money-bills"
                                    iconColor="Negative"
                                    text="{i18n>worklistFilterExpensive}"/>
                            </items>
                            <content>
                                <List 
                                    id="productsList"
                                    width="auto"
                                    
                                    items="{
                                        path:  '/Products',
                                        sorter: {
                                            path: 'QuantityPerUnit',
                                            group: true
                                    },
                                    parameters: {
                                            expand: 'Supplier'
                                    }
                                    
                                    }"
                                    growing="true"
                                    growingThreshold="5"
                                    growingScrollToLoad="false"
                                    mode="SingleSelectMaster"
                                    selectionChange="onItemSelected"
                                    
                                >
                                <headerToolbar>
                                    <Toolbar >
                                        <Title text="Products"/>
                                        <ToolbarSpacer />
                                        <SearchField width="50%" search="onFilterProducts" />
                                        <Button id="addButton" icon="sap-icon://add" press="onAdd" />
                                    </Toolbar>
                                </headerToolbar>
                                <items>
                                    <ObjectListItem 
                                        
                                        title="{ProductName}"
                                        number="{= Math.ceil(${UnitPrice}) + '$'}"    
                                        numberState="{= ${UnitPrice} > 15 ? 'Warning' : 'Success'}"
                                        intro="{ProductID}" 
                                        numberUnit="{QuantityPerUnit}"
                                        

                                    >
                                        <firstStatus>
                                            <ObjectStatus
                                            
                                                title="Deliverd from"
                                                text="{Supplier/Country}"
                                            />
                                        </firstStatus>
                                        <!-- <c:ProductRate/>  -->
                                    </ObjectListItem>
                                    
                                    
                                </items>
                            </List>
                            <core:Fragment
                                fragmentName="opensap.myapp.view.info" type="XML"
                            />
                                
                            
                        </content>
                    </IconTabBar>
                            
                    </IconTabFilter>
                    </items>
                </IconTabBar>
            </content>
        </Page>
    </pages>
</App>



</mvc:View>
